{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "isolatedModules":true,
    "target": "es2020",
    "lib": ["es2020", "DOM"],
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["./packages"],
  "exclude": ["**/node_modules", "**/.*/"]
}
